FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      Bext;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 0 -2 0 0 -1 0];

B0 -0.0005;

internalField   uniform (0 0 $B0);

boundaryField
{
    sideWalls
    {
        type            zeroGradient;
    }
    bottomWall
    {
	type		zeroGradient;
    }
    lithiumInterface
    {
	type		zeroGradient;
    }
    topSurface
    {
        type            zeroGradient;
    }
}

